@model PKTickets.Models.LoginModel



<div class="container border rounded-3  pt-3  bg-dark text-light w-50">
    <div class="text-center">
        <img src="/css/logo/logo.jpg"
             style="width: 185px;" alt="logo">
        <h4 class="mt-1 mb-5 pb-1">Welcome To  PK Tickets</h4>
    </div>



   <div class="mb-3 row justify-content-center">
        <div class="col-3">
            <label class="form-label required">Email Id</label>
        </div>
        <div class="col-5">
            @Html.TextBoxFor(m => m.EmailId , new {@class="form-control", type= "email"})
        </div>
    </div>
    <div class="mb-3 row justify-content-center">
        <div class="col-3">
            <label class="form-label required">Password</label>
        </div>
        <div class="col-5">
            @Html.TextBoxFor(m => m.Password , new {@class="form-control",type="password",minlength = "6",maxlength = "10"})
        </div>
    </div>
    <div class="mb-3 row justify-content-center">
        <button class="btn btn-outline-primary col-2  mb-3" type="submit">
            Log
            in
        </button>
    </div>
    <div class="d-flex align-items-center justify-content-center pb-4">
        <p class="mb-0 me-2">Don't have an account?</p>
        <a class="btn btn-outline-danger" href="~/Home/CreateUser">Create User</a>
    </div>



</div>



